{
  "name": "amsterdam-bike-fleet",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:headed": "playwright test --headed",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "tauri:build:debug": "tauri build --debug",
    "tauri:build:windows": "tauri build --target x86_64-pc-windows-msvc",
    "wasm:build": "cd wasm-lib && wasm-pack build --target bundler --out-dir pkg",
    "wasm:build:release": "cd wasm-lib && wasm-pack build --target bundler --release --out-dir pkg",
    "wasm:build:web": "cd wasm-lib && wasm-pack build --target web --release --out-dir pkg-web",
    "wasm:test": "cd wasm-lib && wasm-pack test --headless --chrome",
    "prebuild": "npm run wasm:build:web",
    "prestart": "npm run wasm:build:web",
    "build:protected": "npm run wasm:build:release && ng run amsterdam-bike-fleet:build-protected:production",
    "prebuild:protected": "echo 'Building WASM before protected build...'",
    "tauri:build:protected": "npm run build:protected && tauri build"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.2.0",
    "@angular/common": "^15.2.0",
    "@angular/compiler": "^15.2.0",
    "@angular/core": "^15.2.0",
    "@angular/forms": "^15.2.0",
    "@angular/platform-browser": "^15.2.0",
    "@angular/platform-browser-dynamic": "^15.2.0",
    "@angular/router": "^15.2.0",
    "@deck.gl/core": "^9.2.6",
    "@deck.gl/layers": "^9.2.6",
    "@deck.gl/mapbox": "^9.2.6",
    "@math.gl/core": "^4.1.0",
    "maplibre-gl": "^5.16.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.12.0"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^15.0.0",
    "@angular-devkit/build-angular": "^15.2.11",
    "@angular/cli": "~15.2.11",
    "@angular/compiler-cli": "^15.2.0",
    "@playwright/test": "^1.58.0",
    "@tauri-apps/api": "^2.9.1",
    "@tauri-apps/cli": "^2.9.6",
    "@types/jasmine": "~4.3.0",
    "@types/node": "^25.0.10",
    "jasmine-core": "~4.5.0",
    "javascript-obfuscator": "^5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.0.0",
    "typescript": "~4.9.4",
    "webpack-obfuscator": "^3.6.0"
  }
}
